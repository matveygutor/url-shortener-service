@model IEnumerable<test.Models.Link>

<div class="text-center">
    <table class="table">
        <tr><th>Long URL</th><th>Short URL</th><th>Date</th><th>Click</th></tr>
        @foreach (Link link in Model)
        {
            <tr>
                <td>@link.LongURL</td>
                <td>@link.ShortURL</td>
                <td>@link.Date</td>
                <td>@link.Click</td>
                <td>
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@link.Id">Изменить</a>
                </td>
                <td>
                    <form asp-controller="Home" asp-action="Delete" method="post" asp-route-id="@link.Id">
                        <input type="submit" value="Удалить" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
