@model IEnumerable<test.Models.Link>

@foreach (Link link in Model.OrderByDescending(b => b.Date))
{
    <div class="text-left">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @link.Name
            </dt>
            <dd class="col-sm-10">
            </dd>
            <dt class="col-sm-2">
                @link.Description
            </dt>
            <dd class="col-sm-10">
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LongURL)
            </dt>
            <dd class="col-sm-10">
                @link.LongURL
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShortURL)
            </dt>
            <dd class="col-sm-10">
                <input style="width: 250px" type="text" class="to-copy" value="@link.ShortURL" readonly />
                <button class="write-btn">Copy link</button>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @link.Date
            </dd>

            @if (link.LastDate != null)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastDate)
                </dt>
                <dd class="col-sm-10">
                    @link.LastDate
                </dd>
            }

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Click)
            </dt>
            <dd class="col-sm-10">
                @link.Click
            </dd>
        </dl>
    </div>
    <div class="buttons">
        <div>

            <form asp-controller="Home" asp-action="Delete" method="post" asp-route-id="@link.Id">
                <input style="margin-right: 20px" type="submit" value="Delete" />
            </form> 
        </div>
        <div>

            <a asp-action="Edit" asp-controller="Home" asp-route-id="@link.Id">Edit</a>
        </div>
    </div>
}

